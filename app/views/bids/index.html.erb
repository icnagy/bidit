<h1>Listing bids</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Item</th>
    <th>User</th>
    <th>Bid</th>
    <th>Bidtime</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.id %></td>
        <td><%= bid.item_id %></td>
        <td><%= bid.user_id %></td>
        <td><%= bid.bid %></td>
        <td><%= bid.bidtime %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

